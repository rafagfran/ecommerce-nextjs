{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "node_modules",
      "scripts/*.js",
      "next",
      ".next",
      "tailwind.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useSemanticElements": "error"
      },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "error",
        "noConsole": "warn"
      },
      "style": {
        "noShoutyConstants": "warn",

        "useNamingConvention": {
          "level": "error",
          "options": {
            "requireAscii": true,
            "strictCase": false
          }
        },
        "useFilenamingConvention": "error"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      }
    }
  },

  "css": {
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "bracketSpacing": true
    }
  }
}
